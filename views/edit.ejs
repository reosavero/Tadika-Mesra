<%- include('partials/header') %>
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Edit Objek</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Luckiest+Guy&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
  <style>
    body {
      background-color: #f2f9ff;
      font-family: 'Luckiest Guy', cursive;
    }

    .title-section {
      text-align: center;
      margin-top: 100px;
      margin-bottom: 20px;
    }

    .title-section h2 {
      font-size: 2.5rem;
      color: #1565c0;
    }

    form {
      background-color: #ffffff;
      border-radius: 12px;
      padding: 20px;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }
  </style>
</head>
<body>
  <div class="container mt-5">
    <div class="title-section">
      <h2>Edit Data Objek</h2>
    </div>

    <form action="/edit/<%= objek.id %>" method="POST" enctype="multipart/form-data">
      <div class="mb-3">
        <label for="nama_objek" class="form-label">Nama Objek</label>
        <input type="text" class="form-control" id="nama_objek" name="nama_objek" value="<%= objek.nama_objek %>" required>
      </div>

      <div class="mb-3">
        <label for="kategori_id" class="form-label">Kategori</label>
        <select class="form-select" id="kategori_id" name="kategori_id" required>
          <% kategori.forEach(k => { %>
            <option value="<%= k.id %>" <%= k.id === objek.kategori_id ? 'selected' : '' %>><%= k.nama %></option>
          <% }) %>
        </select>
      </div>

      <div class="mb-3">
        <label class="form-label">Gambar Saat Ini:</label><br>
        <img src="/uploads/<%= objek.gambar %>" width="100"><br>
        <label for="gambar" class="form-label mt-2">Upload Gambar Baru (jika ingin ganti)</label>
        <input type="file" class="form-control" id="gambar" name="gambar" accept="image/*">
      </div>

      <div class="mb-3">
        <label class="form-label">Audio Saat Ini:</label><br>
        <audio controls src="/uploads/<%= objek.audio %>"></audio><br>
        <label for="audio" class="form-label mt-2">Upload Audio Baru (jika ingin ganti)</label>
        <input type="file" class="form-control" id="audio" name="audio" accept="audio/*">
      </div>

      <div class="d-flex justify-content-between">
        <button type="submit" class="btn btn-primary">Simpan Perubahan</button>
        <a href="/" class="btn btn-secondary">Batal</a>
      </div>
    </form>
  </div>
</body>
</html>
<%- include('partials/footer') %>
