<%- include('partials/header') %>

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Tadika Mesra - Tambah Data Objek</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Luckiest+Guy&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
  <style>
    body {
      background-color: #f2f9ff;
      font-family: 'Luckiest Guy', cursive;
    }

    .title-section {
      text-align: center;
      margin-bottom: 20px;
      margin-top: 100px;
    }

    .title-section h2 {
      font-size: 2.5rem;
      color: #1565c0;
    }

    .title-section p {
      font-size: 1.2rem;
      color: #555;
    }

    form {
      background-color: #ffffff;
      border-radius: 12px;
      padding: 20px;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    form .form-label {
      font-weight: bold;
      color: #333;
    }

    form .form-control,
    form .form-select {
      border-radius: 8px;
      padding: 10px;
    }

    form .btn-primary {
      background-color: #1565c0;
      border: none;
      padding: 10px 20px;
      font-size: 1rem;
      border-radius: 8px;
      transition: background-color 0.3s ease;
    }

    form .btn-primary:hover {
      background-color: #0d47a1;
    }

    form .btn-secondary {
      background-color: #757575;
      border: none;
      padding: 10px 20px;
      font-size: 1rem;
      border-radius: 8px;
      transition: background-color 0.3s ease;
    }

    form .btn-secondary:hover {
      background-color: #616161;
    }
  </style>
</head>
<body>

<div class="container mt-5">
  <div class="title-section">
    <h2>Tambah Data Objek</h2>
    <p class="lead">Isi data objek baru untuk menambah koleksi</p>
  </div>

  <form action="/create" method="POST" enctype="multipart/form-data" class="shadow p-4 rounded col-bg-white">
    <div class="mb-3">
      <label for="nama_objek" class="form-label">Nama Objek</label>
      <input type="text" class="form-control" id="nama_objek" name="nama_objek" placeholder="Masukkan nama objek" required>
    </div>

    <div class="mb-3">
      <label for="kategori_id" class="form-label">Kategori</label>
      <select class="form-select" id="kategori_id" name="kategori_id" required>
        <option value="" selected disabled>Pilih kategori</option>
        <% kategori.forEach(k => { %>
          <option value="<%= k.id %>"><%= k.nama %></option>
        <% }) %>
      </select>
    </div>

    <div class="mb-3">
      <label for="gambar" class="form-label">Upload Gambar</label>
      <input type="file" class="form-control" id="gambar" name="gambar" accept="image/*" required>
    </div>

    <div class="mb-3">
      <label for="audio" class="form-label">Upload Audio</label>
      <input type="file" class="form-control" id="audio" name="audio" accept="audio/*" required>
    </div>

    <div class="d-flex justify-content-between">
      <button type="submit" class="btn btn-primary">Simpan</button>
      <a href="/" class="btn btn-secondary">Batal</a>
    </div>
  </form>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

<%- include('partials/footer') %>
