<%- include('partials/header') %>

<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <title>Buah</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Luckiest+Guy&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
  <style>
    body {
      background-color: #28a745; /* hijau cerah */
      font-family: 'Luckiest Guy', cursive;
      color: white;
    }

    h1 {
      font-size: 3rem;
      margin-top: 100px;
    }

    .fruit-container {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      gap: 20px;
      margin-top: 30px;
    }

    .fruit-box {
      text-align: center;
      background: #d4edda;
      padding: 10px;
      border-radius: 20px;
      width: 180px;
      box-shadow: 0 4px 10px rgba(0,0,0,0.1);
      transition: transform 0.2s ease;
      color: #000;
    }

    .fruit-box:hover {
      transform: scale(1.05);
    }

    .fruit-box img {
      width: 100%;
      border-radius: 15px;
      cursor: pointer;
    }

    .fruit-name {
      font-size: 1.2rem;
      margin-top: 10px;
    }
  </style>
</head>
<body>

  <div class="container text-center">
    <h1>Buah-buahan</h1>

    <div class="fruit-container">
      <% data.forEach(item => { 
        const namaAudio = item.image.substring(0, item.image.lastIndexOf('.'));
      %>
        <div class="fruit-box">
          <img
            src="/stylesheets/image/kartunbuah.image/<%= item.image %>"
            onclick="playSound('<%= namaAudio %>')"
            alt="<%= item.objek %>"
          >
          <div class="fruit-name"><%= item.objek.toUpperCase() %></div>
        </div>
      <% }) %>
    </div>

    <audio id="player" hidden></audio>

    <script>
      function playSound(nama) {
        const player = document.getElementById('player');
        player.src = `/stylesheets/audio/kartunbuah.audio/${nama}.mp3`;
        player.play();
      }
    </script>
  </div>

</body>
</html>

<%- include('partials/footer') %>
