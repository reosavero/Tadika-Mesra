<%- include('partials/header') %>

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Hewan</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Luckiest+Guy&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
  <style>
    html, body {
      height: 100%;
      margin: 0;
      padding: 0;
      display: flex;
      flex-direction: column;
      font-family: 'Luckiest Guy', cursive;
      background-color: #ffc107;
    }

    main {
      flex: 1;
    }

    h1 {
      font-size: 3rem;
      margin-top: 100px;
    }

    .animal-container {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      gap: 20px;
      margin-top: 30px;
      margin-bottom: 50px;
    }

    .animal-box {
      text-align: center;
      background: #fff8dc;
      padding: 10px;
      border-radius: 20px;
      width: 180px;
      box-shadow: 0 4px 10px rgba(0,0,0,0.1);
      transition: transform 0.2s ease;
    }

    .animal-box:hover {
      transform: scale(1.05);
    }

    .animal-box img {
      width: 100%;
      border-radius: 15px;
      cursor: pointer;
    }

    .animal-name {
      font-size: 1.2rem;
      margin-top: 10px;
      color: #000;
    }

    footer {
      background-color: #0d0c1d;
      color: white;
      padding: 30px 0;
      text-align: center;
      width: 100%;
    }
  </style>
</head>
<body>
      <body class="animated-background2"></body>

  <main class="container text-center">
    <h1>Hewan</h1>

    <div class="animal-container">
      <% data.forEach(item => { %>
        <div class="animal-box">
          <img
            src="/uploads/images/<%= item.gambar %>"
            onclick="playSound('<%= item.audio %>')"
            alt="<%= item.nama_objek %>"
          >
          <div class="animal-name"><%= item.nama_objek.toUpperCase() %></div>
        </div>
      <% }) %>
    </div>

    <audio id="player" hidden></audio>
  </main>

  <script>
    function playSound(filename) {
      const player = document.getElementById('player');
      player.src = '/uploads/audio/' + filename;
      player.play();
    }
  </script>

  <%- include('partials/footer') %>

</body>
</html>
