<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <title>Hewan</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Luckiest+Guy&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
  <style>
    body {
      background-color: #ffc107;
      font-family: 'Luckiest Guy', cursive;
    }

    h1 {
      font-size: 3rem;
      margin-top: 100px;
    }

    .animal-container {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      gap: 20px;
      margin-top: 30px;
    }

    .animal-box {
      text-align: center;
      background: #fff8dc;
      padding: 10px;
      border-radius: 20px;
      width: 180px;
      box-shadow: 0 4px 10px rgba(0,0,0,0.1);
      transition: transform 0.2s ease;
    }

    .animal-box:hover {
      transform: scale(1.05);
    }

    .animal-box img {
      width: 100%;
      border-radius: 15px;
      cursor: pointer;
    }

    .animal-name {
      font-size: 1.2rem;
      margin-top: 10px;
      color: #000;
    }

    footer {
   padding-bottom: 100px;
    } 
  </style>
</head>
<body>

  <body class="animated-background2"></body>
  <!-- HEADER -->
  <%- include('partials/header') %>

  <div class="container text-center">
    <h1>Hewan</h1>

    <div class="animal-container">
      <% data.forEach(item => { 
        const namaAudio = item.image.substring(0, item.image.lastIndexOf('.'));
      %>
        <div class="animal-box">
          <img
            src="/stylesheets/image/kartunhewan.image/<%= item.image %>"
            onclick="playSound('<%= namaAudio %>')"
            alt="<%= item.objek %>"
          >
          <div class="animal-name"><%= item.objek.toUpperCase() %></div>
        </div>
      <% }) %>
    </div>

    <audio id="player" hidden></audio>

    <script>
      function playSound(nama) {
        const player = document.getElementById('player');
        player.src = `/stylesheets/audio/kartunhewan.audio/${nama}.mp3`;
        player.play();
      }
    </script>
  </div>

  <!-- FOOTER -->
  <%- include('partials/footer') %>

</body>
</html>
