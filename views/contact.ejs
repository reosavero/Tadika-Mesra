  }

  .kontak-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 6px 16px rgba(0,0,0,0.15);
  }

  .kontak-card h2 {
    color: #34495e;
    margin-bottom: 10px;
  }

  .kontak-card p {
    margin: 5px 0;
    color: #666;
    font-size: 0.95rem;
  }

  .kontak-card a {
    color: #3498db;
    text-decoration: none;
    font-weight: 500;
  }

  .kontak-card a:hover {
    text-decoration: underline;
  }

  @media (max-width: 768px) {
    .kontak-list {
      flex-direction: column;
      align-items: center;
    }

    .kontak-card {
      width: 90%;
    }
  }
