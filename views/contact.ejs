  .kontak-container {
    max-width: 900px;
    margin: 150px auto;
    padding: 30px;
    background-color: #ffffff;
    border-radius: 20px;
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
  }

  .kontak-container h1 {
    text-align: center;
