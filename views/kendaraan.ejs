<%- include('partials/header') %>

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Kendaraan</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-info">
  <div class="container py-5">
    <h1 class="text-center mb-4">Kendaraan</h1>
      <% data.forEach(item => { 
     const namaAudio = item.image.substring(0, item.image.lastIndexOf('.'));
%>
  <div style="display: inline-block; text-align: center; margin: 10px;">
    <img
      src="/stylesheets/image/kartunkendaraan.image/<%= item.image %>"
      width="120"
      style="cursor: pointer;"
      onclick="playSound('<%= namaAudio %>')"
    >
    <p><%= item.objek %></p>
  </div>
<% }) %>

<audio id="player" hidden></audio>

<script>
  function playSound(nama) {
    const player = document.getElementById('player');
    player.src = `/stylesheets/audio/kartunkendaraan.audio/${nama}.mp3`;
    player.play();
  }
</script>
    </div>
  </div>
</body>
</html>
