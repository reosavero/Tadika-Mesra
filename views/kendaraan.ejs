<%- include('partials/header') %>

<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <title>Kendaraan</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Luckiest+Guy&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
<style>
  body {
    background-color: #0dcaf0;
    font-family: 'Luckiest Guy', cursive;
    color: white;
  }

  h1 {
    font-size: 3rem;
    margin-top: 100px;
  }

  .vehicle-container {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 25px;
    margin-top: 30px;
  }

  .vehicle-box {
    text-align: center;
    background: #cff4fc;
    padding: 10px;
    border-radius: 20px;
    width: 180px;
    height: 200px;
    box-shadow: 0 4px 10px rgba(0,0,0,0.1);
    transition: transform 0.2s ease;
    color: #000;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }

  .vehicle-box:hover {
    transform: scale(1.05);
  }

  .vehicle-box img {
    max-height: 106px;
    width: auto;
    display: block;
    margin: 0 auto;
    border-radius: 15px;
    cursor: pointer;
  }

  .vehicle-name {
    font-size: 1.2rem;
    margin-top: 5px;
  }
</style>

</head>
<body>

  <div class="container text-center">
    <h1>Kendaraan</h1>

    <div class="vehicle-container">
      <% data.forEach(item => { 
        const namaAudio = item.image.substring(0, item.image.lastIndexOf('.'));
      %>
        <div class="vehicle-box">
          <img
            src="/stylesheets/image/kartunkendaraan.image/<%= item.image %>"
            onclick="playSound('<%= namaAudio %>')"
            alt="<%= item.objek %>"
          >
          <div class="vehicle-name"><%= item.objek.toUpperCase() %></div>
        </div>
      <% }) %>
    </div>

    <audio id="player" hidden></audio>

    <script>
      function playSound(nama) {
        const player = document.getElementById('player');
        player.src = `/stylesheets/audio/kartunkendaraan.audio/${nama}.mp3`;
        player.play();
      }
    </script>
  </div>

</body>
</html>

<%- include('partials/footer') %>
